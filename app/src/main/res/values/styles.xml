<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    Base.Theme.AppCompat.Light.-->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">-->
    <!-- Light mode-->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
        <item name="cardViewStyle">@style/CardView</item>
        <!-- colors -->
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#1976D2</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">#FCFCFC</item>
        <item name="cardBackground">#FFFFFF</item>
        <item name="textColor">#404040</item>
        <item name="textHintColor">#C0C0C0</item>
        <item name="tintColor">#121212</item>
        <item name="buttonColor">#50a0df</item>
        <item name="buttonSecondary">#FFFFFF</item>
        <!-- menu -->
        <item name="android:itemBackground">#FFFFFF</item>
        <item name="android:textColor">#404040</item>

        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>
    <!-- Dark mode-->
    <style name="darkTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
        <item name="cardViewStyle">@style/CardView</item>
        <!-- colors -->
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">#303030</item>
        <item name="cardBackground">#424242</item>
        <item name="textColor">#FCFCFC</item>
        <item name="textHintColor">#626262</item>
        <item name="tintColor">#FFFFFF</item>
        <item name="buttonColor">#000000</item>
        <item name="buttonSecondary">#FCFCFC</item>
        <!-- menu -->
        <item name="android:itemBackground">#424242</item>
        <item name="android:textColor">#FCFCFC</item>

        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">?attr/backgroundColor</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">?attr/textColor</item>
    </style>

    <style name="WindowAnimationTransition" parent="Base.Theme.AppCompat.Light">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>
